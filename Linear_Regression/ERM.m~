x = load('dataset1_inputs.txt');
t = load('dataset1_outputs.txt');
w = 30;
errors = zeros(1,w) ;

% figure;
% hold on;
% plot(x,t,'+');
% ylim([-2 2]);
for i=1:w    
    %polynomial curve fitting
    %for degrees W[1,30], .5 sum(1..30)(y(xn,w)-tn^2)
    p = polyfit(x,t,i);
    %x2 = [-1:.1:1];
    results = polyval(p,x);
    errors(i) = sum((t - results).^2);
%     plot(x2,result);
end
% title('Target data and degree 1-30 polynomial curve fit');
% hold off;

